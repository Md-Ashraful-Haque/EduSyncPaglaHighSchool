<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # If the file or directory exists, serve it
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Otherwise, serve index.html (React handles the route)
  RewriteRule ^ index.html [L]
</IfModule>
